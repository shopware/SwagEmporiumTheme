{% sw_extends '@Storefront/storefront/element/cms-element-form/form-components/cms-element-form-input.html.twig' %}

{% block cms_element_form_input_input %}
    <input name="{{ fieldName }}"
           type="{{ type ?? 'text'}}"
           id="form-{{ fieldName }}"
           value="{{ data.get( fieldName ) }}"
           placeholder="{{ placeholder|trans }}{% if required %}{{ "general.required"|trans|sw_sanitize }}{% endif %}"
            {% if required %}required="required"{% endif %}
           class="form-control{% if formViolations.getViolations( '/' ~ fieldName ) %} is-invalid{% endif %}"/>

    {% if formViolations.getViolations( '/' ~ fieldName ) is not empty %}
        {% sw_include '@Storefront/storefront/utilities/form-violation.html.twig' with {
            violationPath: ('/' ~ fieldName)
        } %}
    {% endif %}
{% endblock %}
