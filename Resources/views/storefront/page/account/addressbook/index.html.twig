{% sw_extends '@Storefront/storefront/page/account/addressbook/index.html.twig' %}

{% block page_account_address_item_content_create %}{% endblock %}

{% block page_account_address_welcome %}
    <div class="account-welcome">
        <div class="account-headline-wrapper">
            {{ block('page_account_address_welcome_headline') }}
            {{ block('page_account_address_welcome_intro') }}
        </div>

        {% block clone_page_account_address_item_content_create %}
            <div class="address-action-create">
                <a href="{{ path('frontend.account.address.create.page') }}"
                   title="{{ "account.addressCreateBtn"|trans|striptags }}"
                   class="btn btn-primary">
                    {{ "account.addressCreateBtn"|trans|sw_sanitize }}
                </a>
            </div>
        {% endblock %}
    </div>
{% endblock %}

{% block page_account_address_default %}
    <div class="row default-address">
        <h2 class="col-12 default-address-headline">
            {{ "account.defaultAddressHeadline"|trans|sw_sanitize }}
        </h2>

        {{ block('page_account_address_billing') }}

        {{ block('page_account_address_shipping') }}
    </div>
{% endblock %}

{% block page_account_address_overview_body %}
    <div class="address-item-header card-title__wrapper">
        <p class="card-title">{{ "account.addressListBodyHeadline"|trans|sw_sanitize }} #{{ loop.index }}</p>

        <a href="{{ path('frontend.account.address.edit.page', {'addressId': address.id}) }}"
           title="{{ "account.addressesContentItemActionEdit"|trans|striptags }}">
            {% sw_icon 'ic-edit' style { 'pack':'emporium' } %}
        </a>

        {% if defaultShippingAddress.id != address.id and defaultBillingAddress.id != address.id %}
            <form action="{{ path('frontend.account.address.delete', {'addressId': address.id}) }}"
                  class="address-action-delete"
                  method="post">

                <button class="btn"
                        type="submit"
                        title="{{ "account.addressesContentItemActionDelete"|trans|striptags }}">
                    {% sw_icon 'ic-close' style { 'pack':'emporium' } %}
                </button>
            </form>
        {% endif %}
    </div>
    <div class="address-item-body">
        {{ block('page_account_address_overview_address') }}

        {{ block('page_account_address_overview_actions') }}
    </div>
{% endblock %}
