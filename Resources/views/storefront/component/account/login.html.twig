{% sw_extends '@Storefront/storefront/component/account/login.html.twig' %}

{% block component_account_login_submit %}{% endblock %}

{% block component_account_login_password_recover %}
    <div class="login-actions">
        {{ parent() }}

        <div class="btn-group">
            {% block clone_omponent_account_login_submit %}
                <div class="login-cancel">
                    {% block clone_page_product_detail_review_form_cancel %}
                        <a href="#"
                           class="btn btn-light ms-1"
                        data-bs-toggle="collapse"
                        data-bs-target=".multi-collapse"
                        aria-expanded="false"
                        aria-controls="review-form review-list">
                        {{ "detail.reviewLoginCancelButton"|trans|sw_sanitize }}
                        </a>
                    {% endblock %}
                </div>
            {% endblock %}

            {% block clone_component_account_login_submit %}
                <div class="login-submit">
                    <button type="submit"
                            class="btn btn-primary">
                        {{ "account.loginSubmit"|trans|sw_sanitize }}
                    </button>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}

{% block component_account_login_form_mail %}
    <div class="form-group col-md-6 login-form-mail">
        {{ block('component_account_login_form_mail_label') }}

        {{ block('component_account_login_form_mail_input') }}
    </div>
{% endblock %}

{% block component_account_login_form_password %}
    <div class="form-group col-md-6 login-form-password">
        {{ block('component_account_login_form_password_label') }}

        {{ block('component_account_login_form_password_input') }}
    </div>
{% endblock %}
