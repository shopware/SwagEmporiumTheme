{% sw_extends '@Storefront/storefront/layout/header/top-bar.html.twig' %}

{% block layout_header_top_bar %}
    <div class="top-bar d-none d-md-block">
        <div class="container">
            <nav class="top-bar-nav row">
                <div class="col-auto d-md-none d-lg-block">
                    {% block layout_header_top_message %}
                        <p class="top-bar-message">{{ "header.topBarMessage"|trans|striptags }}</p>
                    {% endblock %}
                </div>
                <div class="col-auto d-flex">
                    <span class="top-bar-fact">
                        {% sw_icon 'ic-check-mark' style { 'pack':'emporium' } %}
                        {{ "header.topBarFirst"|trans|sw_sanitize }}
                    </span>
                        <span class="top-bar-fact">
                        {% sw_icon 'ic-check-mark' style { 'pack':'emporium' } %}
                            {{ "header.topBarFirst"|trans|sw_sanitize }}
                    </span>
                        <span class="top-bar-fact">
                        {% sw_icon 'ic-check-mark' style { 'pack':'emporium' } %}
                            {{ "header.topBarFirst"|trans|sw_sanitize }}
                    </span>
                </div>
                <div class="col-auto text-right">
                    {{ block('layout_header_top_bar_currency') }}

                    {{ block('layout_header_top_bar_language') }}
                </div>
            </nav>
        </div>
    </div>
{% endblock %}
