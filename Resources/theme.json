{
    "name": "Emporium Theme",
    "author": "Shopware AG",
    "views": [
        "@Storefront",
        "@SwagPayPal",
        "@SwagCmsExtensions",
        "@SwagCustomizedProducts",
        "@SwagB2bPlatform",
        "@SwagEmporiumTheme",
        "@Plugins"
    ],
    "previewMedia": "app/storefront/src/assets/images/preview.png",
    "style": [
        "app/storefront/src/scss/overrides.scss",
        "@Storefront",
        "app/storefront/src/scss/base.scss"
    ],
    "script": [
        "@Storefront",
        "app/storefront/dist/storefront/js/swag-emporium-theme.js"
    ],
    "asset": [
        "app/storefront/src/assets"
    ],
    "config": {
        "blocks": {
            "themeColors": {
                "label": {
                  "en-GB": "Theme colors",
                  "de-DE": "Themenfarben"
                }
            },
            "typography": {
                "label": {
                  "en-GB": "Typography",
                  "de-DE": "Typografie"
                }
            },
            "statusColors": {
                "label": {
                  "en-GB": "Status messages",
                  "de-DE": "Status-Meldungen"
                }
            },
            "media": {
                "label": {
                  "en-GB": "Media",
                  "de-DE": "Medien"
                }
            },
            "footer": {
                "label": {
                    "en-GB": "Footer",
                    "de-DE": "Footer"
                }
            },
            "errorPages": {
              "label": {
                "en-GB": "Error Pages",
                "de-DE": "Error Pages"
              }
          }
    },
        "fields": {
            "sw-color-brand-primary": {
                "label": {
                  "en-GB": "Primary colour",
                  "de-DE": "Primärfarbe"
                },
                "value": "#0620ff"
            },
            "sw-color-brand-secondary": {
                "label": {
                  "en-GB": "Secondary colour",
                  "de-DE": "Sekundärfarbe"
                },
                "value": "#c3e2e6"
            },
            "sw-border-color": {
                "label": {
                  "en-GB": "Border",
                  "de-DE": "Rahmen"
                },
                "value": "#dadfe5"
            },
            "sw-background-color": {
                "label": {
                  "en-GB": "Background",
                  "de-DE": "Hintergrund"
                },
                "value": "#ffffff"
            },
            "sw-color-success": {
                "label": {
                  "en-GB": "Success",
                  "de-DE": "Erfolg"
                },
                "value": "#60d788"
            },
            "sw-color-info": {
                "label": {
                  "en-GB": "Information",
                  "de-DE": "Information"
                },
                "value": "#4d65ff"
            },
            "sw-color-warning": {
                "label": {
                  "en-GB": "Notice",
                  "de-DE": "Hinweis"
                },
                "value": "#ffae39"
            },
            "sw-color-danger": {
                "label": {
                  "en-GB": "Error",
                  "de-DE": "Fehler"
                },
                "value": "#e32166"
            },
            "sw-font-family-base": {
                "label": {
                  "en-GB": "Text font type",
                  "de-DE": "Schriftart Text"
                },
                "value": "'Sen', sans-serif"
            },
            "sw-text-color": {
                "label": {
                  "en-GB": "Text and icon color",
                  "de-DE": "Text- und Iconfarbe"
                },
                "value": "#1c1e25"
            },
            "sw-font-family-headline": {
                "label": {
                  "en-GB": "Headline font type",
                  "de-DE": "Schriftart Überschrift"
                },
                "value": "'Sen', sans-serif"
            },
            "sw-headline-color": {
                "label": {
                  "en-GB": "Headline colour",
                  "de-DE": "Überschriftfarbe"
                },
                "value": "#1C1E25"
            },
            "sw-color-price": {
                "label": {
                  "en-GB": "Price",
                  "de-DE": "Preis"
                },
                "value": "#000639"
            },
            "sw-color-buy-button": {
                "label": {
                  "en-GB": "Buy button",
                  "de-DE": "Kaufen-Button"
                },
                "value": "#000639"
            },
            "sw-color-buy-button-text": {
                "label": {
                  "en-GB": "Buy button text",
                  "de-DE": "Kaufen-Button-Text"
                },
                "value": "#fff"
            },
            "sw-logo-desktop": {
                "label": {
                  "en-GB": "Desktop",
                  "de-DE": "Desktop"
                },
                "type": "media",
                "value": "app/storefront/src/assets/logo/emporium-logo-desktop.svg"
            },
            "sw-logo-tablet": {
                "label": {
                  "en-GB": "Tablet",
                  "de-DE": "Tablet"
                },
                "type": "media",
                "value": "app/storefront/src/assets/logo/emporium-logo-desktop.svg"
            },
            "sw-logo-mobile": {
                "label": {
                  "en-GB": "Mobile",
                  "de-DE": "Handy"
                },
                "type": "media",
                "value": "app/storefront/src/assets/logo/emporium-logo-mobile.svg"
            },
            "sw-footer-logo": {
                "label": {
                    "en-GB": "Footer logo",
                    "de-DE": "Footer Logo"
                },
                "type": "media",
                "value": "app/storefront/src/assets/logo/emporium-logo-footer.svg",
                "editable": true,
                "block": "media",
                "order": 300
            },
            "sw-footer-minimal-logo": {
                "label": {
                    "en-GB": "Footer Minimal logo",
                    "de-DE": "Footer Minimal Logo"
                },
                "type": "media",
                "value": "app/storefront/src/assets/logo/emporium-logo-footer-minimal.svg",
                "editable": true,
                "block": "media",
                "order": 300
            },
            "sw-contact-form": {
                "label": {
                    "en-GB": "Contact form image",
                    "de-DE": "Kontaktformular Bild"
                },
                "type": "media",
                "value": "app/storefront/src/assets/images/contact-form.png",
                "editable": true,
                "block": "media"
            },
            "sw-newsletter-form": {
                "label": {
                    "en-GB": "Newsletter form image",
                    "de-DE": "Newsletter Formular Bild"
                },
                "type": "media",
                "value": "app/storefront/src/assets/images/newsletter-form.png",
                "editable": true,
                "block": "media"
            },
            "sw-404-image": {
                "label": {
                  "en-GB": "404 Page Image",
                  "de-DE": "404 Page Image"
                },
                "type": "media",
                "value": "app/storefront/src/assets/images/404-image.png",
                "editable": true,
                "block": "errorPages"
            },
            "sw-maintenance-image": {
                "label": {
                  "en-GB": "Maintenance Page Image",
                  "de-DE": "Maintenance Page Image"
                },
                "type": "media",
                "value": "app/storefront/src/assets/images/maintenance.png",
                "editable": true,
                "block": "errorPages"
            },
            "sw-wishlist-empty": {
                "label": {
                  "en-GB": "Wishlist empty state",
                  "de-DE": "Wunschzettel leerer Zustand"
                },
                "type": "media",
                "value": "app/storefront/src/assets/images/wishlist_empty.png",
                "editable": true,
                "block": "wishlist"
            },
            "sw-facebook-link": {
                "label": {
                  "en-GB": "Facebook link",
                  "de-DE": "Facebook-Link"
                },
                "type": "textarea",
                "value": "https://www.facebook.com/",
                "editable": true,
                "block": "footer"
            },
            "sw-instagram-link": {
                "label": {
                  "en-GB": "Instagram link",
                  "de-DE": "Instagram-Link"
                },
                "type": "textarea",
                "value": "https://www.instagram.com/",
                "editable": true,
                "block": "footer"
            },
            "sw-twitter-link": {
                "label": {
                  "en-GB": "Twitter link",
                  "de-DE": "Twitter-Link"
                },
                "type": "textarea",
                "value": "https://www.twitter.com/",
                "editable": true,
                "block": "footer"
            },
            "sw-tiktok-link": {
                "label": {
                  "en-GB": "Tiktok link",
                  "de-DE": "Tiktok-Link"
                },
                "type": "textarea",
                "value": "https://www.tiktok.com/",
                "editable": true,
                "block": "footer"
            },
            "sw-logo-share": {
              "label": {
                "en-GB": "App & share icon",
                "de-DE": "App- & Share-Icon"
              }
            },
            "sw-logo-favicon": {
              "label": {
                "en-GB": "Favicon",
                "de-DE": "Favicon"
              }
            }
        }
    }
}
